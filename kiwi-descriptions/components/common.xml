<image>
	<profiles>
		<profile name="CommonCore" description="Core packages"/>
		<profile name="Common-l10n" description="Localization"/>
	</profiles>
	<packages type="image" profiles="CommonCore">
		<!-- Core packages -->
		<package name="binutils"/>
		<package name="curl"/>
		<package name="e2fsprogs"/>
		<package name="man-db"/>
		<package name="passwd"/>
		<package name="policycoreutils"/>
		<package name="procps-ng"/>
		<package name="selinux-policy-targeted"/>
		<package name="sudo"/>
		<package name="util-linux"/>
		<!-- Hardware support -->
		<namedCollection name="hardware-support"/>
		<package name="linux-firmware"/>
		<package name="microcode_ctl"/>
		<package name="fwupd"/>
		<!-- Networking -->
		<package name="NetworkManager-wifi"/>
		<package name="firewalld"/>
		<package name="systemd-resolved"/>
		<!-- System -->
		<package name="rpm-plugin-systemd-inhibit"/>
		<!-- package name="systemd-oomd-defaults"/ -->
		<package name="zram-generator-defaults"/>
		<!-- Tools -->
		<package name="bash-completion"/>
		<package name="bind-utils"/>
		<package name="btrfs-progs"/>
		<package name="dmidecode"/>
		<package name="net-tools"/>
		<package name="pciutils"/>
		<package name="psmisc"/>
		<package name="clinfo"/>
		<package name="exfatprogs"/>
		<package name="htop"/>
		<package name="nano-default-editor"/>
		<package name="fastfetch"/>
		<package name="p7zip"/>
		<package name="rsync"/>
		<package name="unar"/>
		<package name="unrar"/>
		<package name="zip"/>
		<!-- RPM Fusion repositories -->
		<package name="rpmfusion-free-release"/>
		<package name="rpmfusion-free-release-tainted"/>
		<package name="rpmfusion-nonfree-release"/>
		<package name="rpmfusion-nonfree-release-tainted"/>
		<package name="rpmfusion-*-appstream-data"/>
	</packages>
	<preferences profiles="Common-l10n">
		<locale>it_IT</locale>
		<keytable>it</keytable>
		<timezone>Europe/Rome</timezone>
	</preferences>
	<packages type="image" profiles="Common-l10n">
		<package name="glibc-langpack-it"/>
		<package name="hunspell-it"/>
		<package name="langpacks-it"/>
	</packages>
</image>
